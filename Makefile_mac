# Makefile for the NSGif Project
# gcc compiler

CC = gcc
CFLAGS = -Iinclude
AR = ar
SRC = $(wildcard src/*.c)
OBJ = $(SRC:.c=.o)
BUILD_DIR = build
STATIC_LIB = $(BUILD_DIR)/libnsgif.a # Updated library name and extension

all: $(BUILD_DIR) $(STATIC_LIB)

$(BUILD_DIR):
	mkdir -p $(BUILD_DIR) # Using -p flag to avoid errors if directory already exists

$(STATIC_LIB): $(OBJ)
	$(AR) rcs $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f *.o $(BUILD_DIR)/*.a

.PHONY: all clean